{
  "name": "gemini-translate-extension",
  "version": "1.0.0",
  "description": "Google Gemini API ile güçlü çeviri eklentisi - Cross-browser compatibility",
  "main": "background/background.js",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "package": "npm run build && npm run package:chrome && npm run package:firefox && npm run package:safari",
    "package:chrome": "powershell Compress-Archive -Path manifest.json,cross-browser,popup,content,background,options,assets,utils -DestinationPath dist/gemini-translate-chrome.zip -Force",
    "package:firefox": "powershell Compress-Archive -Path manifest.firefox.json,cross-browser,popup,content,background,options,assets,utils -DestinationPath dist/gemini-translate-firefox.zip -Force",
    "package:safari": "powershell Compress-Archive -Path manifest.safari.json,cross-browser,popup,content,background,options,assets,utils -DestinationPath dist/gemini-translate-safari.zip -Force"
  },
  "keywords": [
    "translation",
    "google-gemini",
    "browser-extension",
    "cross-browser",
    "ai-translation",
    "multilingual"
  ],
  "author": "Gemini Translate Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "style-loader": "^4.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xenitV1/g-translate.git"
  },
  "bugs": {
    "url": "https://github.com/xenitV1/g-translate/issues"
  },
  "homepage": "https://github.com/xenitV1/g-translate#readme"
}
